---
import "../styles/global.css";


const {
    title = "Collage of Inclusion",
    description = "Building a caring, connected community"
} = Astro.props;

const BASE = import.meta.env.BASE_URL;

---
<html lang="en" class="bg-(--coi-primary)">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
        <meta name="description" content={description} />
    </head>
    <body class="min-h-screen text-slate-800">
        <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 bg-white px-3 py-2 rounded-md shadow">
            Skip to main content
        </a>

        <header class="mx-auto max-w-5xl px-4 py-6 flex items-center justify-between">
            <a href="/" class="text-2xl font-bold tracking-wide">COI</a>
            <nav class="flex gap-5 text-sm">
                <a href={`${BASE}`} class="hover:underline">Home</a>
                <a href={`${BASE}about`} class="hover:underline">About</a>
                <a href={`${BASE}recap`} class="hover:underline">Recap</a>
                <a href={`${BASE}policy`} class="hover:underline">Policy & Accessibility</a>
                <a href={`${BASE}contact`} class="hover:underline">Contact</a>
            </nav>
        </header>
        

        <main id="main" class="mx-auto max-w-5xl px-4 py-8">
            <slot />
        </main>

        <footer class="mt-16 border-t border-black/10 bg-white/60">
            <div class="mx-auto max-w-5xl px-4 py-6 text-sm">
                <div>Email: collage.inclusion@gmail.com - Vancouver, BC</div>
                <div class="opacity-70">Copyright Collage of Inclusion, 2025 - Privacy & Accessibility</div>
            </div>
        </footer>
    </body>
</html>


